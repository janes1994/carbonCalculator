<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="row g-3" style="
          background-color: rgb(234, 237, 210);
          width: 100%;
          
        ">
      <div
        class="col-lg-2"
        style="padding-right: 0px !important"
      >
        <nav class="navbar navbar-expand-lg" >
          <div class="container-fluid" style="padding-right: 0px !important;">
            <!-- <a class="navbar-brand" href="#">Offcanvas navbar</a> -->
            <div
              class="offcanvas offcanvas-start"
              tabindex="-1"
              id="offcanvasNavbar"
              aria-labelledby="offcanvasNavbarLabel"
            >
              <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
                  Offcanvas
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"
                ></button>
              </div>
              <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-column pe-3">
                  <li class="nav-item" style="margin: 0px !important">
                    <img src="logo.png" alt="logo" style="width: 100%; height: 100%" />
                  </li>
                  <li class="nav-item" style="margin-top: 15px">
                    <b style="font-size: 13px; color: rgb(185, 45, 45)"
                      >Profil Pengguna</b
                    >
                    <hr style="margin-top: 1px; margin-bottom: 1px" />
                    <label
                      for="exampleFormControlInput1"
                      class="form-label"
                      style="color: blue; font-size: 12px"
                      >Halo! nama saya</label
                    >
                    <br />
                    <input
                      type="text"
                      class="form-control rounded-0"
                      id="exampleFormControlInput1"
                      placeholder="John Sample"
                      style="font-size: 12px"
                    />

                    <label
                      for="exampleFormControlInput1"
                      class="form-label"
                      style="color: blue; font-size: 12px"
                      >Saya bekerja di</label
                    >
                    <br />
                    <div class="dropdown">
                      <button
                        class="btn btn-light btn-outline-dark dropdown-toggle rounded-0"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                        style="font-size: 11px; width: 100%; margin-bottom: 5px"
                      >
                        Pilih salah satu
                      </button>
                      <ul
                        class="dropdown-menu"
                        style="width: 100%; font-size: 11px"
                      >
                        <li>PT Pertamina A</li>
                        <li>PT Pertamina B</li>
                        <li>PT Pertamina C</li>
                      </ul>
                    </div>

                    <button
                      type="button"
                      class="btn btn-light btn-outline-dark rounded-0"
                      style="font-size: 11px; width: 100%; display: flex"
                    >
                      <div style="flex: 10%">
                        <img src="https://img.icons8.com/color/48/000000/save--v1.png" style="width: 18px; height: 18px"/>
                      </div>
                      <div style="flex: 90%">Update Data Pengguna</div>
                    </button>
                  </li>
                  <br />
                  <li
                    class="nav-item"
                    style="
                      background-color: rgb(25, 94, 168);
                      color: antiquewhite;
                      font-size: 11px;
                      text-align: center;
                      padding: 10px;
                    "
                  >
                    <b>Periode Pelaporan</b>

                    <div class="dropdown">
                      <button
                        class="btn btn-secondary dropdown-toggle rounded-0"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                        style="
                          font-size: 11px;
                          width: 100%;
                          background-color: whitesmoke;
                          color: black;
                          margin-bottom: 5px;
                        "
                      >
                        Pilih periode
                      </button>
                      <ul
                        class="dropdown-menu"
                        style="width: 100%; font-size: 11px"
                      >
                        <li>Januari 2022</li>
                        <li>Februari 2022</li>
                        <li>Maret 2022</li>
                      </ul>
                    </div>
                  </li>
                  <li class="nav-item" style="margin-top: 15px">
                    <b style="font-size: 13px; color: rgb(185, 45, 45)"
                      >Referensi</b
                    >
                    <hr style="margin-top: 1px" />
                    <button
                      type="button"
                      class="btn btn-light btn-outline-dark rounded-0"
                      data-bs-toggle="modal" data-bs-target="#benchmarkModal"
                      style="
                        font-size: 11px;
                        width: 100%;
                        display: flex;
                        margin-bottom: 5px;
                      "
                    >
                      <div style="flex: 10%">
                        <img src="https://img.icons8.com/color/48/000000/gantt-chart.png" style="width: 18px; height: 18px"/>
                      </div>
                      <div style="flex: 90%">Benchmark</div>
                    </button>
                    <button
                      type="button"
                      class="btn btn-light btn-outline-dark rounded-0"
                      data-bs-toggle="modal" data-bs-target="#panduanSerapanKarbonModal"
                      style="
                        font-size: 11px;
                        width: 100%;
                        display: flex;
                        margin-bottom: 5px;
                      "
                    >
                      <div style="flex: 10%">
                        <img src="https://img.icons8.com/color/48/000000/globe--v1.png" style="width: 18px; height: 18px"/>
                      </div>
                      <div style="flex: 90%">
                        Panduan Serapan Karbon / Donasi Karbon
                      </div>
                    </button>
                    <button
                      type="button"
                      class="btn btn-light btn-outline-dark rounded-0"
                      data-bs-toggle="modal" data-bs-target="#panduanPenghematanListrikModal"
                      style="
                        font-size: 11px;
                        width: 100%;
                        display: flex;
                        margin-bottom: 5px;
                      "
                    >
                      <div style="flex: 10%">
                        <img src="https://img.icons8.com/color/48/000000/light.png" style="width: 18px; height: 18px"/>
                      </div>
                      <div style="flex: 90%">Panduan Hemat Energi Listrik</div>
                    </button>
                    <button
                      type="button"
                      class="btn btn-light btn-outline-dark rounded-0"
                      data-bs-toggle="modal" data-bs-target="#panduanHematEnergiTransportasiModal"
                      style="
                        font-size: 11px;
                        width: 100%;
                        display: flex;
                        margin-bottom: 5px;
                      "
                    >
                      <div style="flex: 10%">
                        <img src="https://img.icons8.com/color/48/000000/bus.png" style="width: 18px; height: 18px"/>
                      </div>
                      <div style="flex: 90%">
                        Panduan Hemat Energi Transportasi
                      </div>
                    </button>
                    <a
                      href="https://www.youtube.com/watch?v=31ExeUook4w"
                      target="_blank"
                      class="btn btn-light btn-outline-dark rounded-0"
                      style="
                        font-size: 11px;
                        width: 100%;
                        display: flex;
                      "
                    >
                      <div style="flex: 10%">
                        <img src="https://img.icons8.com/color/48/000000/cinema---v1.png" style="width: 18px; height: 18px"/>
                      </div>
                      <div style="flex: 90%">Petunjuk Penggunaan Aplikasi</div>
                    </a>
                    
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </nav>
      </div>
      <div class="col" style="padding-left: 0px !important">
        <!-- navbar -->
        <nav
          class="navbar navbar-expand-lg"
          style="background-color: rgb(234, 236, 212);"
        >
          <div class="container-fluid">
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            @*<a
              class="nav-link active"
              aria-current="page"
              href="#"
              style="font-size: 12px"
              ><i class="bi bi-person"></i> Beranda</a
            >*@
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 14px">
                <img src="https://img.icons8.com/office/16/000000/person-male.png" style="width: 18px; height: 18px"/> BERANDA
            </a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link" asp-area="" asp-controller="LangkahSatu" asp-action="Index" style="font-size: 14px">
                      <img src="https://img.icons8.com/color/48/000000/cottage.png" style="width: 18px; height: 18px"/> Langkah 1 - Tempat Tinggal</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-area="" asp-controller="LangkahDua" asp-action="Index" style="font-size: 14px">
                      <img src="https://img.icons8.com/color/48/000000/bus.png" style="width: 18px; height: 18px"/> Langkah 2 - Transportasi</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-area="" asp-controller="LangkahTiga" asp-action="Index" style="font-size: 14px">
                      <img src="https://img.icons8.com/color/48/000000/sunflower.png" style="width: 18px; height: 18px"/> Langkah 3 - Serapan Karbon</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-area="" asp-controller="Ringkasan" asp-action="Index" style="font-size: 14px">
                      <img src="https://img.icons8.com/color/48/000000/brief.png" style="width: 18px; height: 18px"/> Ringkasan</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
        <!-- navbar -->

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <!-- Benchmark Modal -->
        <div class="modal fade" id="benchmarkModal" tabindex="-1" aria-labelledby="benchmarkModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content rounded-0">
              <div class="modal-header rounded-0" rounded-0" style="background-color: rgb(130, 144, 92)">
                <h5 class="modal-title" id="exampleModalLabel" style="color: white">Referensi Benchmark</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body mb-3">
                <div class="mb-3">
                    <img src="https://img.icons8.com/color/48/000000/info--v1.png" style="width: 18px; height: 18px; margin-right: 5px"/>
                    <p style="display: inline">Pilih file dibawah lalu klik tombol untuk membuka</p>
                </div>
                <div class="list-group rounded-0">
                    <button type="button" class="list-group-item list-group-item-action">1. Benchmarking Jejak Karbon</button>
                    <button type="button" class="list-group-item list-group-item-action">2. Benchmark Jejak Karbon Puspitek UI 2012</button>
                    <button type="button" class="list-group-item list-group-item-action">3. Benchmark Studi Jejak Karbon Jakut UI 2012</button>
                    <button type="button" class="list-group-item list-group-item-action">4. Benchmark Global Average Footprint 1990 - 2005</button>
                    <button type="button" class="list-group-item list-group-item-action">5. Benchmark List of Countries by CO2 per Capita</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Panduan Serapan Karbon Modal -->
        <div class="modal fade" id="panduanSerapanKarbonModal" tabindex="-1" aria-labelledby="panduanSerapanKarbonModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content rounded-0">
              <div class="modal-header rounded-0" rounded-0" style="background-color: rgb(130, 144, 92)">
                <h5 class="modal-title" id="exampleModalLabel" style="color: white">Referensi Panduan Serapan Karbon</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body mb-3">
                <div class="mb-3">
                    <img src="https://img.icons8.com/color/48/000000/info--v1.png" style="width: 18px; height: 18px; margin-right: 5px"/>
                    <p style="display: inline">Pilih file dibawah lalu klik tombol untuk membuka</p>
                </div>
                <div class="list-group rounded-0">
                    <button type="button" class="list-group-item list-group-item-action">1. Sedekah Pohon dompet Dhuafa Banner</button>
                    <button type="button" class="list-group-item list-group-item-action">2. Link Donasi Pohon Dompet Dhuafa</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Panduan Penghematan Listrik Modal -->
        <div class="modal fade" id="panduanPenghematanListrikModal" tabindex="-1" aria-labelledby="panduanPenghematanListrikModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content rounded-0">
              <div class="modal-header rounded-0" rounded-0" style="background-color: rgb(130, 144, 92)">
                <h5 class="modal-title" id="exampleModalLabel" style="color: white">Referensi Panduan Penghematan Listrik</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body mb-3">
                <div class="mb-3">
                    <img src="https://img.icons8.com/color/48/000000/info--v1.png" style="width: 18px; height: 18px; margin-right: 5px"/>
                    <p style="display: inline">Pilih file dibawah lalu klik tombol untuk membuka</p>
                </div>
                <div class="list-group rounded-0">
                    <button type="button" class="list-group-item list-group-item-action">1. Hemat Energi Masa Pandemi Work From Home</button>
                    <button type="button" class="list-group-item list-group-item-action">2. Efisiensi Energi Potong 10 Persen</button>
                    <button type="button" class="list-group-item list-group-item-action">3. Tips 3 Aksi Hemat Energi EBTKE</button>
                    <button type="button" class="list-group-item list-group-item-action">4. Energy Switch - Vampir Energi</button>
                    <button type="button" class="list-group-item list-group-item-action">5. Vampir Listrik</button>
                    <button type="button" class="list-group-item list-group-item-action">6. Hemat Listrik untuk IBU - ESDM EBTKE</button>
                    <button type="button" class="list-group-item list-group-item-action">7. Listrik Baik Untuk Indonesia Mandiri Energi</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Panduan Hemat Energi Transportasi Modal -->
        <div class="modal fade" id="panduanHematEnergiTransportasiModal" tabindex="-1" aria-labelledby="panduanHematEnergiTransportasiModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content rounded-0">
              <div class="modal-header rounded-0" rounded-0" style="background-color: rgb(130, 144, 92)">
                <h5 class="modal-title" id="exampleModalLabel" style="color: white">Referensi Panduan Hemat Energi Transportasi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body mb-3">
                <div class="mb-3">
                    <img src="https://img.icons8.com/color/48/000000/info--v1.png" style="width: 18px; height: 18px; margin-right: 5px"/>
                    <p style="display: inline">Pilih file dibawah lalu klik tombol untuk membuka</p>
                </div>
                <div class="list-group rounded-0">
                    <button type="button" class="list-group-item list-group-item-action">1. Green Transport - LAPAN</button>
                    <button type="button" class="list-group-item list-group-item-action">2. Tips Berkendara Ramah Lingkungan</button>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
